pkgname=qbittorrent
pkgver=3.1.11
pkgrel=2
pkgdesc="A bittorrent client written in C++ / Qt4 using the good libtorrent library"
arch=('i686' 'x86_64')
url="http://www.qbittorrent.org"
license=('custom GPL2')
depends=('qt4' 'libtorrent-rasterbar')
makedepends=('boost')
optdepends=('python: needed for torrent search tab')
install=$pkgname.install
source=("http://downloads.sourceforge.net/sourceforge/qbittorrent/$pkgname-$pkgver.tar.xz" fake-ut-peerid-and-ua.patch)
sha256sums=('71105ed99e58b9dd96da6f7f2340f4a56b5d675903fad213d76905305d447f63' 'SKIP')

build() {
  cd $pkgname-$pkgver
  
  patch -p1 -i ../fake-ut-peerid-and-ua.patch

  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver

  make INSTALL_ROOT="$pkgdir/" install
  install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}
