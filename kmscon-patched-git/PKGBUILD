# Maintainer: Aetf <7437103@gmail.com>
# Contributor: Daniel Micay <danielmicay@gmail.com>
# Contributor: David Herrmann <dh.herrmann@googlemail.com>
pkgname=kmscon-patched-git
_gitname=kmscon
pkgver=8.r20.g0b34527
pkgrel=2
pkgdesc='Terminal emulator based on Kernel Mode Setting (KMS)'
arch=(i686 x86_64)
url='http://www.freedesktop.org/wiki/Software/kmscon/'
license=('MIT')
depends=(systemd libdrm mesa libgl pango libxkbcommon xkeyboard-config libtsm)
makedepends=(libxslt docbook-xsl linux-api-headers)
options=(!libtool)
provides=(kmscon)
conflicts=(kmscon)
source=("git+https://github.com/dvdhrm/kmscon.git"
        add-underline.patch
		fix-margin-color.patch)
md5sums=('SKIP'
         'SKIP'
		 'SKIP')

pkgver() {
  cd $srcdir/$_gitname
  git describe --long | sed -r "s/^$_gitname-//;s/([^-]*-g)/r\\1/;s/-/./g"
}

build() {
  cd $srcdir/$_gitname
  echo "Applying add-underline.patch"
  patch -p1 -i ../add-underline.patch
  echo "Applying fix-margin-color.patch"
  patch -p1 -i ../fix-margin-color.patch

  ./autogen.sh
  CGLAGS=-DBUILD_ENABLE_DEBUG ./configure --prefix=/usr --enable-debug --disable-optimizations
  make
}

package() {
  cd $srcdir/$_gitname
  make DESTDIR="$pkgdir/" install
  mkdir -p "$pkgdir/usr/share/licenses/$pkgname" "$pkgdir/usr/lib/systemd/system"
  cp COPYING "$pkgdir/usr/share/licenses/$pkgname/"
  cp docs/kmscon{,vt@}.service "$pkgdir/usr/lib/systemd/system/"
}
